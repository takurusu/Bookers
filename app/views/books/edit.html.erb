  <body>
    <h1>Editing Book</h1>
    <div class=success>
    <%= flash[:success] %>
    </div>
    <div class=error>
    <% if @book.errors.any? %>
      <%= @book.errors.count %> error prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    </div>
    <%= form_with model:@book, local: true do |f| %>
      <div class=label-box>  
        <label class="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class=label-box>
        <label class= "book_body">Body</label>
        <%= f.text_area :body %>
      </div>
      <div class=submit>
        <%= f.submit 'Update Book' %>
      </div>
        
    <% end %>
    <%= link_to "Show", book_path(@book) %>
     |
    <a class="back" href="/books">Back</a>
  </body>
  
  

  